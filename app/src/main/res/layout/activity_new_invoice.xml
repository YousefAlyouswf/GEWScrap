<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newInvoice">


    <ImageButton
        android:id="@+id/butEnter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:src="@drawable/greenbutton"
        android:onClick="addInvoice"
        />

    <EditText
        android:id="@+id/EditIDnational"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:hint="رقم الهوية 10 أرقام"
        android:inputType="number"
        android:maxLength="10" />

    <ImageButton
        android:id="@+id/clearID"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/EditIDnational"
        android:layout_toRightOf="@+id/EditIDnational"
        android:onClick="clearID"
        android:src="@drawable/clear1"
        android:text="x" />

    <ScrollView
        android:id="@+id/type1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/butEnter"
        android:layout_below="@+id/EditIDnational"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >

            <Spinner
                android:id="@+id/typeinvoice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#EBDEC4"

                />

            <Spinner
                android:id="@+id/typeinvoice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#B6D6A9" />

            <Spinner
                android:id="@+id/typeinvoice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#EBDEC4" />

            <Spinner
                android:id="@+id/typeinvoice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#B6D6A9" />

            <Spinner
                android:id="@+id/typeinvoice5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#EBDEC4" />

            <Spinner
                android:id="@+id/typeinvoice6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#B6D6A9" />

            <Spinner
                android:id="@+id/typeinvoice7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#EBDEC4" />


        </LinearLayout>


    </ScrollView>

    <ScrollView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/butEnter"
        android:layout_below="@+id/EditIDnational"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/type1"
        android:layout_toRightOf="@+id/type1">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/weight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="الوزن"
                android:inputType="numberDecimal" />

            <EditText

                android:id="@+id/weight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="الوزن"
                android:inputType="numberDecimal" />

            <EditText

                android:id="@+id/weight3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:hint="الوزن"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/weight4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="الوزن"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/weight5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="الوزن"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/weight6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:hint="الوزن"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/weight7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="الوزن"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/weight8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/butEnter"
        android:layout_below="@+id/EditIDnational"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/price1"
        android:layout_toRightOf="@+id/price1">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="40dp"
                android:onClick="clear1"
                android:src="@drawable/clear"
                android:textSize="22sp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="40dp"
                android:onClick="clear2"
                android:src="@drawable/clear"
                android:textSize="22sp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="45dp"
                android:onClick="clear3"
                android:src="@drawable/clear"
                android:textSize="22sp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="40dp"
                android:onClick="clear4"
                android:src="@drawable/clear"
                android:textSize="22sp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="40dp"
                android:onClick="clear5"
                android:src="@drawable/clear"
                android:textSize="22sp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="45dp"
                android:onClick="clear6"
                android:src="@drawable/clear"
                android:textSize="22sp" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="35dp"
                android:onClick="clear7"
                android:src="@drawable/clear"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/butEnter"
        android:layout_below="@+id/EditIDnational"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/symbol"
        android:layout_toRightOf="@+id/symbol">

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/priceunit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="السعر"
                android:inputType="numberDecimal" />

            <EditText

                android:id="@+id/priceunit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="السعر"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/priceunit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:hint="السعر"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/priceunit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="السعر"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/priceunit5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="السعر"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/priceunit6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:hint="السعر"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/priceunit7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="السعر"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/priceunit8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/totalprice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/butEnter"
        android:layout_below="@+id/EditIDnational"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/price2"
        android:layout_toRightOf="@+id/price2">

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:hint="0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:hint="0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:hint="0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:hint="0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:hint="0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:hint="0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/alltotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/EditIDnational"
        android:layout_toRightOf="@+id/EditIDnational"
        android:hint="المبلغ المستحق"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>